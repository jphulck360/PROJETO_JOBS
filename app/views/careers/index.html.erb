<p id="notice"><%= notice %></p>

<div id="titulo" class="animated pulse">
  Lista de Profissões
</div>

<div id="container">
  <table align="center" class="table table-condensed">
    <thead>
      <tr>
        <th>ID</th>
        <th>Profissão</th>
        <th>Imagem</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @careers.each do |career| %>
        <% count=0 %>
        <tr>
          <td><%= career.id %></td>
          <td><%= career.nome %></td>
          <td><%= image_tag career.foto_c.url, size:"50" %></td>
          <td><%= link_to 'Show', career %></td>
          <td><%= link_to 'Edit', edit_career_path(career) %></td>
          <td><%= link_to 'Destroy', career, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Career', new_career_path %>
