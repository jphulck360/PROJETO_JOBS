<div class="page-header">
  <%= link_to new_curriculum_course_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Curriculum course
  <% end %>
  <h1>Listing curriculum_courses</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @curriculum_courses) do |curriculum_course| %>
            <td><%= link_to 'Show', curriculum_course %></td>
        <td><%= link_to 'Edit', edit_curriculum_course_path(curriculum_course) %></td>
        <td><%= link_to 'Destroy', curriculum_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
